<table class="stats-table">
  <thead>
    <th>Views</th>
    <th>Replies</th>
    <th>Completion Rate</th>
  </thead>
  <tbody>
    <tr>
      <td><%= stats_value report.view_count %></td>
      <td><%= stats_value report.reply_count %></td>
      <td><%= stats_percentage report.completion_rate, precision: 0 %></td>
    </tr>
  </tbody>
</table>