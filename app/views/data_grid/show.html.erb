<%= render 'surveys/tabs', survey: survey, selected: :data %>

<div class="container-fluid">
  <div class="d-flex justify-content-center align-items-center">
    <div class="dropdown">
      <a href="#" class="btn btn-secondary dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <%= icon 'fas', 'file-export' %> Export
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to '#', class: 'dropdown-item' do %>
            <%= icon 'fas', 'file' %> CSV
          <% end %>
        </li>
        <li>
          <%= link_to '#', class: 'dropdown-item' do %>
            <%= icon 'fas', 'file-excel' %> Excel
          <% end %>
        </li>
        <li>
          <%= link_to '#', class: 'dropdown-item' do %>
            <%= icon 'fas', 'file-pdf' %> PDF
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <div class="report-headers d-flex justify-content-between text-muted mt-2">
    <div>Page <%= survey.pager.page %> of <%= survey.pager.pages %></div>
    <div><%= survey.pager.items %> of <%= survey.pager.count %> records</div>
  </div>
  <div class="table-responsive">
    <table class="table table-sm table-striped">
      <thead>
      <th>Created</th>
      <% survey.questions.each do |question| %>
        <th class="text-nowrap"><%= question.text %></th>
      <% end %>
      </thead>
      <tbody>
      <% survey.paginated_records.each do |record| %>
        <tr>
          <td><%= fmt_datetime record.created_at %></td>
          <% survey.questions.each do |question| %>
            <td><%= answers_text record, question %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-between align-items-center">
    <%== pagy_bootstrap_nav(survey.pager) %>
    <div class="d-flex justify-content-between align-items-center">
      <div class="me-2">Show</div>
      <select class="form-select">
        <option selected>10</option>
        <option>15</option>
        <option>20</option>
      </select>
    </div>
  </div>
</div>