<% question.question_options.each do |option| %>
    <div class="form-check">
        <%= form.radio_button :question_option_id, option.id, class: 'form-check-input' %>
        <%= form.label :question_option_id, option.text, for: form.field_id(:question_option_id, option.id), class: 'form-check-label' %>
    </div>
<% end %>
